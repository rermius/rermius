  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "build:macos-arm": "npm run build && npm run tauri build -- --target aarch64-apple-darwin",
    "build:macos-intel": "npm run build && npm run tauri build -- --target x86_64-apple-darwin",
    "build:linux": "npm run build && npm run tauri build -- --target x86_64-unknown-linux-gnu",
    "build:windows": "npm run build && npm run tauri build -- --target x86_64-pc-windows-msvc",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "tauri": "tauri",
    "icons:generate": "node scripts/generate-icons.js",
    "release:prepare": "node scripts/prepare-release.js",
    "release:update-version": "node scripts/update-version.js",
    "release:build": "npm run build && npm run tauri build",
    "release": "bash scripts/release.sh"
  },
  "license": "MIT",
